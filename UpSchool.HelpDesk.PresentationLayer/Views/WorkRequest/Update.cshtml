@model UpdateWorkRequestModel

@{
    Layout = "_Layout";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title mb-3">Talep Düzenle</h3>
        <form asp-action="Update" asp-controller="WorkRequest">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="example-text-input" class="form-control-label">Başlık</label>
                <input class="form-control" type="text" asp-for="Title">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Açıklama</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            </div>
            <div class="form-group text-danger" asp-validation-summary="All" >


            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg w-100">Kaydet</button>
            </div>
        </form>

    </div>

</div>

